extends ../../layout/layout.pug

block variable
    -var path = '../../';

    //- path +"img/head_main.png"


block content

    // begin breadcrumbs
    section#breadcrumbs.breadcrumbs.section
        .container_center
            .breadcrumbs__content

                .kama_breadcrumbs
                    span
                        a(href="#")
                            span Главная
                    span.kb_sep 

                    span.kb_title Отзывы

    // end breadcrumbs

    // begin reviewsVideo
    section#reviewsVideo.reviewsVideo.reviewsVideo_archive.section
        .container_center
            h1.section__title <b>Отзывы пациентов</b>
            .section__desc Кто хоть однажды побывал у нас — навсегда определяется со стоматологией. За 10 лет получили более 2000 полжительных отзывов о своей работе

            .reviewsVideo__filter
                .filter
                    ul.cat-list.filter-cat-js

                        li.cat-item.filter-cat-js
                            input(type="radio" id="term_id_1" name="cat_name" value="term_id_1" checked)
                            label(for="term_id_1")
                                span Все

                        each item in [ {id: '2', label: 'Лечение зубов во сне'}, {id: '3', label: 'Имплантация зубов'}, {id: '4', label: 'Все-на-4'}, {id: '5', label: 'Отбеливание зубов'}, {id: '5', label: 'Исправление прикуса'}, {id: '6', label: 'Элайнеры'}, {id: '7', label: 'Брекеты'}, {id: '8', label: 'Лечение дёсен'} ]

                            li.cat-item.filter-cat-js
                                input(type="radio" id="term_id_"+item.id+"" name="cat_name" value="term_id_"+item.id+"")
                                label(for="term_id_"+item.id+"")
                                    span=item.label
            .reviewsVideo__grid.filter__content
                each item in [1,2,3,4,1]
                    .reviewsVideo__preview.video-wrap
                        .reviewsVideo__video.video-play(style="background-image: url('../../img/reviewsVideo_"+item+".png')")
                            video(width="100%" allowfullscreen="true" muted="muted" autoplay="autoplay" playsinline="playsinline" loop="loop")
                                source(src="../../media/information.mp4" type="video/mp4")

                        .reviewsVideo__content.video-content
                            .reviewsVideo__play
                                .play.youtubeModal_js#rsDoGqnPE4c
                                    i.icon_play
                            .reviewsVideo__text
                                span Анна Ивановна Троценко
                                span “Благодарю за высокий профессионализм и грамотную понятную консультацию” 

                include ../../parts/pagination.pug

    // end reviewsVideo


    include ../../sections/reviewsCompany.pug

    include ../../sections/reviews.pug

    include ../../sections/singup.pug
