// begin advantages
section#advantages.advantages.section
    .container_center
        .advantages__wrap
            .advantages__top

                .advantages__caption
                    h2.section__title <b>Лично отвечаю за качество предоставляемых услуг</b> в сети клиник FUROR 
                    .section__desc Можно не брать в долг у знакомых и не просить детей оплатить лечение 

                .advantages__preview.video-wrap
                    .advantages__video.video-play(style="background-image: url('../../img/advantages.png')")
                        video(width="100%" allowfullscreen="true" muted="muted" autoplay="autoplay" playsinline="playsinline" loop="loop")
                            source(src="../../media/information.mp4" type="video/mp4")

                    .advantages__content.video-content
                        .advantages__play
                            .play.youtubeModal_js#rsDoGqnPE4c
                                i.icon_play
                        .advantages__text
                            span Айк Оганесович Байбурцян
                            span Кандидат медицинских наук, руководитель и основатель сети стоматологий FUROR



                .advantages__slider.swiper.swiper_advantages_js
                    .advantages__naw
                        .swiper-fraction
                        .swiper-arrows
                            i.icon_arrow_left
                            i.icon_arrow_right
                    .swiper-wrapper.itemForDataFancybox_js
                        each item in ['', '', '', '', '',]

                            .swiper-slide
                                .advantages__slide
                                    .advantages__license.img
                                        a(href=path +"img/license.png" data-fancybox data-type="image")
                                            img(src=path +"img/license.png" loading="lazy" alt="license")

            .advantages__bottom
                .miniCards
                    ul.miniCards__list
                        each item in [ {img: '1', content: 'Вас будут лечить <b>врачи с опытом работы от 7 лет,</b> которые успешно приняли более 5 000 пациентов'}, {img: '2', content: 'У вас будет <b>личный куратор, который будет отвечать на все вопросы</b> от начала и до конца лечения'}, {img: '3', content: 'Цена не увеличится в процессе, <b>заключим с вами договор</b> и зафиксируем цену '}, {img: '4', content: '<b>Напомним о посещении клиники заранее</b> через мессенджеры WhatsApp или Telegram'} ]

                            // begin .bottom__item
                            .miniCards__item
                                .miniCards__img.img
                                    img(src=path +"img/advantages_"+item.img+".png" alt="image" loading="lazy")
                                .miniCards__title!=item.content 

                            // end .bottom__item

// end advantages
